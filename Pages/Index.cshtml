@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_PublicLayout.cshtml";
}

<div class="container-fluid vh-100 d-flex align-items-center">
    <div class="row w-100">
        <div class="col-md-6"></div>
        <div class="col-md-6 col-lg-4 offset-lg-2">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Welcome Back</h2>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center mb-3">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg flex-fill">Login</button>
                            <button id="login-usernameless" type="button" class="btn btn-outline-primary btn-lg" title="Sign in with biometric">
                                <i class="fas fa-fingerprint"></i>
                            </button>
                        </div>
                        <div class="text-center mt-3">
                            <p>
                                Don't have an account? <a asp-page="./Account/Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a>
                            </p>
                        </div>
                    </form>
                    
                    <!-- Hidden form to provide anti-forgery token for usernameless login -->
                    <form style="display: none;">
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/fido2.js"></script>
}
