@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_PublicLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Welcome Back</h2>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="d-grid">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>
                    <div class="text-center mt-3">
                        <p>
                            Don't have an account? <a asp-page="./Account/Register" asp-route-returnUrl="@Model.ReturnUrl">Register here</a>
                        </p>
                    </div>
                </form>
                
                <hr class="my-4">
                
                <div class="text-center">
                    <!-- Hidden form to provide anti-forgery token for usernameless login -->
                    <form style="display: none;">
                        @Html.AntiForgeryToken()
                    </form>
                    
                    <h5>Sign in with a passkey</h5>
                    <p class="text-muted small">Use this option if you have a resident key (discoverable credential) stored on your device.</p>
                    <button id="login-usernameless" class="btn btn-outline-primary">Sign In with Passkey</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/fido2.js"></script>
}
